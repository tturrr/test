<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#c7ff4050">

    <TextView

        android:id="@+id/duty_bod"
        android:layout_width="132dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="20dp"

        android:text=""/>

    <TextView

        android:id="@+id/today_bod"
        android:layout_width="132dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text=""

        android:textSize="20dp" />



    <FrameLayout
    android:layout_marginTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/duty_img1"
            android:layout_marginTop="37dp"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:src="@drawable/tspy"/>


        <ImageView
            android:id="@+id/today_img"
            android:layout_marginTop="75dp"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:src="@drawable/tspy"/>



        <LinearLayout

        android:background="#c7ff4050"
        android:layout_width="match_parent"
        android:layout_height="41dp">

        <ImageView
            android:id="@+id/menu_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/tab_b"/>

        <ImageView
            android:id="@+id/game_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/game"/>


        <ImageView
            android:id="@+id/info_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/tab_e"/>

    </LinearLayout>


</FrameLayout>


    <LinearLayout



        android:layout_width="match_parent"

        android:layout_height="50dp">


        <TextView
            android:id="@+id/textbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="계획 게시판"
            android:textColor="#ffffff"

            android:textSize="25dp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:id="@+id/timetext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:id="@+id/addtext"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="글쓰기"
                android:textColor="#ffffff"
                android:textSize="25dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="170dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:id="@+id/listview1"
            android:layout_width="match_parent"
            android:layout_height="373dp"
            android:choiceMode="singleChoice" />

    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="550dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/img_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>


    </LinearLayout>



    <FrameLayout
        android:layout_marginTop="600dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


        </LinearLayout>


        <ImageView

            android:clickable="true"
            android:id="@+id/anim_img"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"

            />
    </FrameLayout>







</FrameLayout>