<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.duty.register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="#c7ff4050">


        <TextView
            android:id="@+id/textbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:scaleX="1.5"
            android:text="←"

            android:textColor="#ffffff"
            android:textSize="30dp" />


    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/register_image"
                android:layout_gravity="center"
                android:layout_marginLeft="150dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
               />


        </LinearLayout>
        <Button
            android:id="@+id/register_camera_btn"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카메라"/>


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >


        <TextView
            android:id="@+id/textView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="이름"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/name_text"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="15dp" />

        \

    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="100dp"

            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="이메일"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/id_edit_text"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/overlap_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="중복 체크" />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="100dp"

            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="비밀번호"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/password_edit_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:password="true"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="100dp"

            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="비밀번호 확인"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/password_edit_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:password="true"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView


            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="생년월일"
            android:textSize="15dp" />


        <EditText

            android:id="@+id/identt_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="전화번호"
            android:textSize="15dp" />

        <EditText

            android:id="@+id/number_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">


        <Button
            android:id="@+id/button1"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="완료"
            android:textColor="#ffffff"
            android:textSize="25dp" />


    </LinearLayout>


</LinearLayout>
