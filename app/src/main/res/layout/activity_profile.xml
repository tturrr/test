<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.duty.profile">





    <LinearLayout
        android:background="#c7ff4050"
        android:layout_width="match_parent"

        android:layout_height="50dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textColor="#ffffff"
                android:id="@+id/textbutton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="←"


                android:scaleX="1.5"
                android:textSize="30dp"/>

        </LinearLayout>



        </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
           />


    </LinearLayout>
        <Button
            android:id="@+id/profile_camera_btn"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카메라"/>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="이름"/>

        <TextView
            android:id="@+id/name_text"
            android:paddingLeft="51dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공백란"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="이메일"/>

        <TextView
            android:id="@+id/id_text"
            android:paddingLeft="32dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공백란"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="생년월일"/>

        <TextView
            android:id="@+id/identt_text"
            android:paddingLeft="15dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공백란"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="전화번호"/>

        <TextView
            android:id="@+id/number_text"
            android:paddingLeft="15dp"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공백란"/>




    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">


    </LinearLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView

       android:paddingLeft="30dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="게임 코인"
        android:textSize="20dp"/>


        <TextView
            android:paddingLeft="30dp"
            android:id="@+id/coin_count_view"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="point"
            android:textSize="20dp"
            />



    </LinearLayout>

        <ImageView
            android:id="@+id/plus_one"

            android:layout_marginLeft="200dp"
            android:layout_width="100dp"
            android:layout_height="25dp"
            />


</FrameLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/crokoifno"
            />

        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="최근 점수 :"/>

        <TextView

            android:id="@+id/count_text"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="112312"/>

        <TextView

            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="회"
            android:textSize="20dp"/>



        </LinearLayout>




    </LinearLayout>


