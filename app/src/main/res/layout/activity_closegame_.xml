<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.duty.closegame_Activity"
    android:background="@drawable/croko3">

    <ImageView
        android:id="@+id/restart_game"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="129dp"
        android:src="@drawable/tspy" />

    <TextView

        android:id="@+id/id_text"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:layout_toStartOf="@+id/restart_game"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/count_text"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView3"
        android:paddingRight="35dp"
        android:gravity="center"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView

        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:gravity="center"
        android:text="점수:"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="55dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/id_text"
        android:layout_toEndOf="@+id/id_text"
        android:gravity="center"
        android:text="님의"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/star1_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/id_text"
        android:layout_marginStart="17dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/star1" />

    <ImageView
        android:id="@+id/star2_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/star4_view"
        android:layout_toEndOf="@+id/restart_game"
        app:srcCompat="@drawable/star1" />

    <ImageView
        android:id="@+id/star3_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/star2_view"
        android:layout_marginEnd="18dp"
        app:srcCompat="@drawable/star1" />

    <ImageView
        android:id="@+id/star4_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/star1_view"
        android:layout_toStartOf="@+id/restart_game"
        app:srcCompat="@drawable/star1" />


</RelativeLayout>
